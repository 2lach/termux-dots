function ip_show_my_public() {
	myip="$(dig +short myip.opendns.com @resolver1.opendns.com)"
	echo "My WAN/Public IP address: ${myip}"
}

function convert-mkv-to-mp4() {
	ffmpeg -i "$1" -acodec ac3 -vcodec copy "$2"
